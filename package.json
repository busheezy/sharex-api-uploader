{
	"name": "sharex-api-uploader",
	"displayName": "ShareX API Uploader",
	"description": "Upload text files to ShareX API.",
	"version": "0.0.1",
	"engines": {
		"vscode": "^1.69.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"onCommand:sharex-api-uploader.share",
		"onCommand:sharex-api-uploader.setSecret"
	],
	"repository": "https://github.com/busheezy/vscode-sharex-api-uploader",
	"main": "./out/extension.js",
	"contributes": {
		"commands": [
			{
				"command": "sharex-api-uploader.share",
				"title": "Share: Upload"
			},
			{
				"command": "sharex-api-uploader.setSecret",
				"title": "Share: Set Secret"
			}
		],
		"configuration": {
			"title": "Share",
			"properties": {
				"share.apiUrl": {
					"type": "string",
					"required": true,
					"description": "URL of share API."
				},
				"share.responseUrl": {
					"type": "string",
					"required": true,
					"description": "URL of response to prepend to string id."
				}
			}
		}
	},
	"scripts": {
		"vscode:prepublish": "yarn run compile",
		"compile": "tsc -p ./",
		"watch": "tsc -watch -p ./",
		"pretest": "yarn run compile && yarn run lint",
		"lint": "eslint src --ext ts",
		"test": "node ./out/test/runTest.js"
	},
	"devDependencies": {
		"@types/glob": "^7.2.0",
		"@types/mocha": "^9.1.1",
		"@types/node": "16.x",
		"@types/vscode": "^1.69.0",
		"@typescript-eslint/eslint-plugin": "^5.30.0",
		"@typescript-eslint/parser": "^5.30.0",
		"@vscode/test-electron": "^2.1.5",
		"eslint": "^8.18.0",
		"glob": "^8.0.3",
		"mocha": "^10.0.0",
		"typescript": "^4.7.4"
	},
	"dependencies": {
		"form-data": "^4.0.0",
		"got": "^11.8.3"
	}
}
